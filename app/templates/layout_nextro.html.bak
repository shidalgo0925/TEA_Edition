<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <title>1% Mejor â€“ Nextro</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Nextro/Bootstrap base (CDN rÃ¡pido). Reemplaza por tus archivos locales cuando quieras -->

  <link rel="stylesheet" href="{{ url_for('static', filename='css/brand.css') }}">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Custom -->
  <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
  <style>
    .nk-sidebar { width: 260px; }
    .nk-content { margin-left: 260px; padding: 24px; }
    .badge-mariachi { background:#f59f00; }  /* Ã¡mbar */
    .badge-easytech { background:#0ea5e9; }  /* celeste */
    .badge-personal { background:#10b981; }  /* verde */
    .card-kpi h6 { opacity:.7; font-weight:600; }
    .card-kpi .value { font-size: 24px; font-weight:700; }
    .sticky-top { top:0; }
  </style>
</head>
<body class="bg-light">

  <!-- Sidebar simple estilo Nextro -->
  <aside class="nk-sidebar position-fixed h-100 bg-white border-end">
    <div class="p-3 border-bottom d-flex align-items-center gap-2">
      <i class="bi bi-graph-up"></i>
      <strong>1% Mejor</strong>
    </div>
    <nav class="p-3 d-flex flex-column gap-2">
      <a href="{{ url_for('dashboard.dashboard') }}" class="btn btn-outline-secondary w-100"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a>
      <a href="#" class="btn btn-outline-secondary w-100"><i class="bi bi-calendar3 me-2"></i>Calendario</a>
      <a href="#" class="btn btn-outline-secondary w-100"><i class="bi bi-bullseye me-2"></i>Metas</a>
      <a href="#" class="btn btn-outline-secondary w-100"><i class="bi bi-journal-check me-2"></i>Diario 1%</a>
      <a href="#" class="btn btn-outline-secondary w-100"><i class="bi bi-gear me-2"></i>Config</a>
    </nav>
  </aside>

  <!-- Content -->
  <main class="nk-content">
    <div class="container-fluid">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="m-0">Dashboard</h4>
        <div class="d-flex align-items-center gap-2">
          <span class="badge badge-mariachi">ðŸŽº Mariachi</span>
          <span class="badge badge-easytech">ðŸ’¼ Easytech</span>
          <span class="badge badge-personal">ðŸ§˜ Personal</span>
        </div>
		
		<!-- Si estas conectado al Google -->
		{% if google_connected is defined and not google_connected %}
		  <a href="{{ url_for('auth.google_connect') }}" class="btn btn-primary">
			<i class="bi bi-google me-1"></i> Conectar Google Calendar
		  </a>
		{% else %}
		  <a href="{{ url_for('cal.sync_today') }}" class="btn btn-outline-primary">
			<i class="bi bi-arrow-repeat me-1"></i> Sincronizar hoy
		  </a>
		  <a href="{{ url_for('auth.google_disconnect') }}" class="btn btn-outline-danger">
			<i class="bi bi-x-circle me-1"></i> Desconectar
		  </a>
		{% endif %}
		
      </div>

      {% block content %}{% endblock %}
    </div>
  </main>

  <!-- JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  {% block scripts %}{% endblock %}
</body>
</html>
